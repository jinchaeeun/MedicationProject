<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bPTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/bloodpressure"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todayDate" />

        <TextView
            android:id="@+id/todayDateTXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:columnCount="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bMeasureTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="23dp"
                android:text="@string/bPMeasure" />

            <TextView
                android:id="@+id/bPressureTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/bPressure" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/familyPhoneTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/morning"
                android:labelFor="@+id/morTimeETXT" />

            <EditText
                android:id="@+id/morTimeETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="time"
                android:labelFor="@+id/familyPhoneETXT"
                android:importantForAutofill="no" />


            <EditText
                android:id="@+id/familyPhoneETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|fill"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="end"
                android:inputType="number"
                android:maxLength="3"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/mmHgTXT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/mmHg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eveTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:labelFor="@+id/eveTimeETXT"
                android:text="@string/evening" />

            <EditText
                android:id="@+id/eveTimeETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="time"
                android:labelFor="@+id/eveBPresETXT"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/eveBPresETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill|end"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:gravity="end"
                android:inputType="number"
                android:maxLength="3" />

            <TextView
                android:id="@+id/mmHgTXT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/mmHg" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/BSSaveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/save" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:columnCount="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bMeasureTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="23dp"
                        android:text="@string/bPMeasure" />

                    <TextView
                        android:id="@+id/bPressureTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/bPressure" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/familyPhoneTXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@+id/morTimeETXT"
                        android:text="@string/morning" />

                    <EditText
                        android:id="@+id/morTimeETXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="time"
                        android:labelFor="@+id/familyPhoneETXT" />


                    <EditText
                        android:id="@+id/familyPhoneETXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|fill"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="3" />

                    <TextView
                        android:id="@+id/mmHgTXT1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/mmHg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eveTXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@+id/eveTimeETXT"
                        android:text="@string/evening" />

                    <EditText
                        android:id="@+id/eveTimeETXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="time"
                        android:labelFor="@+id/eveBPresETXT" />

                    <EditText
                        android:id="@+id/eveBPresETXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill|end"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:gravity="end"
                        android:inputType="number"
                        android:maxLength="3" />

                    <TextView
                        android:id="@+id/mmHgTXT2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/mmHg" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
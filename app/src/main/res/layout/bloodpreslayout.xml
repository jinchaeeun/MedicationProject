<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bPTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/bloodpressure"
        android:textSize="23dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:columnCount="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bMeasureTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:text="@string/bMeasure" />

            <TextView
                android:id="@+id/bPressureTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/bPressure" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/morTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/morning" />

            <EditText
                android:id="@+id/morTimeETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="time" />


            <EditText
                android:id="@+id/morBPresETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:maxLength="3" />

            <TextView
                android:id="@+id/mmHgTXT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/mmHg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eveTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:labelFor="@+id/eveTimeETXT"
                android:text="@string/evening" />

            <EditText
                android:id="@+id/eveTimeETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="time" />

            <EditText
                android:id="@+id/eveBPresETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:gravity="right"
                android:maxLength="3" />

            <TextView
                android:id="@+id/mmHgTXT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/mmHg" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/BPSaveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/save" />


</LinearLayout>
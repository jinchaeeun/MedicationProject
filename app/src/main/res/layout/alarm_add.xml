<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginBottom="10dp"
        android:background="#7ebe72"
        android:onClick="gomain"
        app:srcCompat="@drawable/logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/bSTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_main_font"
        android:gravity="center"
        android:text="복약 알람 설정"
        android:textSize="25sp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MediEatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/app_main_font"
                android:text="복용 약 이름: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/MediEatETXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/app_main_font"
                android:hint="복용하시는 약 이름 입력"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="20dp"
            android:columnCount="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/app_main_font"
                    android:text="구분" />

                <TextView
                    android:id="@+id/bMeasureTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/app_main_font"
                    android:text="@string/bPMeasure" />

                <TextView
                    android:id="@+id/bSugarTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/app_main_font"
                    android:text="복약 갯수" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/meal_spinner"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="1"
                    android:labelFor="@+id/bSuTimeTXT"
                    android:fontFamily="@font/app_main_font"
                    android:gravity="center|end"/>

                <TextView
                    android:id="@+id/bSuTimeTXT"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_main_font"
                    android:gravity="center"
                    android:labelFor="@+id/bSugarETXT"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/bSugarETXT"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_border"
                    android:backgroundTint="#cbe3c7"
                    android:fontFamily="@font/app_main_font"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/mmHgTXT1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/app_main_font"
                    android:text="개"
                    android:textSize="18sp" />
            </LinearLayout>

        </GridLayout>

    <Button
        android:id="@+id/BSSaveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="#F18B67"
        android:fontFamily="@font/app_main_font"
        android:onClick="click"
        android:text="@string/save" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_date_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/app_main_font" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_main_font"
                    android:text="@string/PressureResultTEXT" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:columnCount="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/app_main_font"
                        android:text="구분" />

                    <TextView
                        android:id="@+id/bMeasureTXT_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="23dp"
                        android:fontFamily="@font/app_main_font"
                        android:text="알람 시간" />

                    <TextView
                        android:id="@+id/bSugarTXT_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:fontFamily="@font/app_main_font"
                        android:text="복약 갯수" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/before_morTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:text="아침"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/before_bfTimeTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/before_bfBSTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:maxLength="3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/before_mgDlTXT1_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:text="개"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/after_morTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:text="점심"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/after_bfTimeTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/after_bfBSTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:maxLength="3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/after_mgDlTXT2_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:text="개"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/before_lunchTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:text="저녁"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/before_lunchTimeTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/before_lunchBSTXT_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:gravity="center"
                        android:maxLength="3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/before_mmHgTXT3_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/app_main_font"
                        android:text="개"
                        android:textSize="18sp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/BSSaveBTN3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#F18B67"
            android:fontFamily="@font/app_main_font"
            android:onClick="finish_alam"
            android:text="음악 종료" />

    </LinearLayout>
</LinearLayout>